<?xml version="1.0" encoding="UTF-8"?>
<form	addrulepath="/administrator/components/com_questions/models/rules" >
	<fieldset addfieldpath="/administrator/components/com_questions/models/fields">
		<field name="id" type="hidden" />
		<field name="userid" type="hidden"	/>
		
		<field
			name="group_name"
			type="text"
			label="COM_QUESTIONS_FRM_Q_TITLE"
			description="COM_QUESTIONS_FRM_Q_TITLE"
			size="40"
			maxlength="40"
			required="true"
			validate="title"
			class="inputbox"
			default=""
		/>
		
		<field
			name="moderators"
			type="users"
			label="COM_QUESTIONS_MODERATORS_SELECT"
			class="inputbox"
			size="40"
			required="true"
			multiple="true"
		/>
		
			
		<field
			name="published"
			type="hidden"
			format="%Y-%m-%d %H:%M:%S"
		/>
		
		<field
			name="created"
			type="hidden"
			format="%Y-%m-%d %H:%M:%S"
		/>
		
		<field
			name="modified"
			type="hidden"
			format="%Y-%m-%d %H:%M:%S"
		/>
			
		<field
			name="ip"
			type="hidden"
		/>

	</fieldset>
</form>
